<html lang="en">
  <head>
        <title>Register Form</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
   {{>heder}}
  </head>
  <body style="overflow-x: hidden;">
   {{>navbar}} 
<div class="container">
 

<form action="/register" method="post" class="m-4">
<div class="row">
    <div class="col-sm-6 p-3" style="background-color:lavender;"> <div class="form-group">
   
    <input type="text" class="form-control" placeholder="First Name" name="firstname" value="" autocomplete="off">
  </div>
  <div class="form-group">
   
    <input type="email" class="form-control" placeholder="Enter Email" name="email" value="" autocomplete="off">
  </div>
  <div class="form-group">
   
    <input type="text" minlength="10" maxlength="10" class="form-control" placeholder="Enter Phone No." name="phone" value="" autocomplete="off">
  </div>
  <div class="form-group">
   
    <input type="text"  class="form-control" placeholder="Enter Your Age " name="age" value="" autocomplete="off">
  </div>
  </div>
    <div class="col-sm-6  p-3" style="background-color:lavenderblush;"> 
      <div class="form-group">
   
    <input type="text"  class="form-control" placeholder="Last Name" name="lastname" value="" autocomplete="off">
  </div>
  <div class="form-group">
 
    <input type="password" class="form-control" placeholder="Enter password" name="password" value="" autocomplete="off">
  </div>
  <div class="form-group">

    <input type="password" class="form-control" placeholder="Confirm Password" name="confirmpassword" value="" autocomplete="off">
  </div>

  <!-- Default radio -->
<div class="form-check">
  <input class="form-check-input" type="radio" name="gender" value="male" id="flexRadioDefault1"/>
 
  <label class="form-check-label" for="flexRadioDefault1"> <span>Male</span></label>
</div>

<!-- Default checked radio -->
<div class="form-check">
  <input class="form-check-input" type="radio" name="gender" value="female" id="flexRadioDefault2" unchecked/>
 
  <label class="form-check-label" for="flexRadioDefault2"> <span>Female</span> </label>
</div>
  </div>
  </div>

 <input type="submit" class="btn btn-dark btn-lg btn-block mt-2" value="Register"></input>
</form>
   <img src="/public/img/IMG_3881.JPG" alt="">
</div>

{{>footer}}  
  </body>

</html>